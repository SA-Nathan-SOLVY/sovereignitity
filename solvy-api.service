[Unit]
Description=SOLVY API Service (Gunicorn)
After=network.target

[Service]
Type=notify
User=www-data
Group=www-data
WorkingDirectory=/var/www/backend
Environment="PATH=/var/www/backend/.venv/bin"
ExecStart=/var/www/backend/.venv/bin/gunicorn -c gunicorn_config.py app_production:app
ExecReload=/bin/kill -s HUP $MAINPID
KillMode=mixed
KillSignal=SIGTERM
Restart=on-failure
RestartSec=10s

[Install]
WantedBy=multi-user.target
